<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Duration</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @table.bookings.each do |booking| next if booking.id.nil? %>
      <tr>
        <td><%= booking.date %></td>
        <td><%= booking.duration %></td>
        <td><%= booking.user %></td>
        <td><%= link_to 'Show', restaurant_table_booking_path(restaurant_id: @restaurant.id, table_id: @table.id, id: booking.id) %></td>
        <td><%= link_to 'Edit', edit_restaurant_table_booking_path(restaurant_id: @restaurant.id, table_id: @table.id, id: booking.id) %></td>
        <td><%= link_to 'Destroy', restaurant_table_booking_path(restaurant_id: @restaurant.id, table_id: @table.id, id: booking.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>